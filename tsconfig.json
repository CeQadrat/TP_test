{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "paths": {
      "react": ["../node_modules/preact/compat/src/index.d.ts", "../node_modules/preact/compat"],
      "react-dom": ["../node_modules/preact/compat/src/index.d.ts", "../node_modules/preact/compat"]
    }
  },
  "include": [
    "src",
    "./webpack.config.js"
  ]
}